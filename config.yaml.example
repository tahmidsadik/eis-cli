# EIS CLI Configuration File
# Copy this file to ~/.eiscli/config.yaml or ./config.yaml
# Or use environment variables (see README.md)

bitbucket:
  # ==========================================
  # OAuth 2.0 Authentication (Recommended)
  # ==========================================
  # OAuth provides better security and easier setup (no app passwords needed)
  # 
  # Setup instructions:
  # 1. Go to https://bitbucket.org/[workspace]/workspace/settings/oauth-consumers/new
  # 2. Create a new OAuth consumer:
  #    - Name: "EIS CLI" (or your preference)
  #    - Callback URL: http://localhost:PORT/callback (PORT is dynamic, use this exact format)
  #    - Permissions: Repository (Read), Pipelines (Read/Write), Pipeline Variables, Webhooks
  # 3. Copy the Key (client_id) and Secret (client_secret)
  # 4. Set them below and set use_oauth: true
  # 5. Run: eiscli auth login
  
  client_id: "your-oauth-consumer-key"
  client_secret: "your-oauth-consumer-secret"
  use_oauth: true
  
  # ==========================================
  # Basic Auth (Legacy - App Password)
  # ==========================================
  # Only used if use_oauth is false or not set
  # Create an app password at: https://bitbucket.org/account/settings/app-passwords/
  # Required scopes: pipelines:read, repositories:read, deployments:write
  
  username: "your-username"
  app_password: "your-app-password"
  
  # ==========================================
  # Workspace (Required for both auth methods)
  # ==========================================
  # Your Bitbucket workspace (organization slug)
  # For EIS platform, use: cover42
  workspace: "cover42"

# Deployment-related configuration (optional)
deployment:
  # Automatically create missing deployment environments without prompting
  # Default: false (will prompt user for confirmation)
  auto_create_environments: false

  # Default environment type to use when type cannot be inferred
  # Valid values: Test, Staging, Production
  # Default: Test
  default_environment_type: "Test"

# AWS configuration for ECR registry management (optional)
aws:
  # AWS profile for production environments (testing, test, production, production-zurich)
  # Default: "default"
  default_profile: "default"

  # AWS profile for non-production environments (staging, development)
  # Default: "staging" 
  nonprod_profile: "staging"

  # AWS region for ECR repositories
  # Default: "eu-central-1"
  # Can be overridden with AWS_REGION environment variable
  region: "eu-central-1"
